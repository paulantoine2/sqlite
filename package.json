{
  "name": "@capacitor-community/sqlite",
  "version": "2.4.1-devversion.2",
  "description": "Capacitor SQLite Plugin",
  "homepage": "https://github.com/capacitor-community/sqlite",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "fmt": "npm run prettier -- --write && npm run swiftlint -- autocorrect",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "Jean Pierre Queau",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^2.4.0",
    "@capacitor/core": "^2.4.0",
    "@capacitor/ios": "^2.4.0",
    "@ionic/prettier-config": "^1.0.0",
    "@ionic/swiftlint-config": "^1.1.1",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/node": "^13.13.2",
    "husky": "^4.2.5",
    "np": "^6.5.0",
    "prettier": "^2.0.5",
    "prettier-plugin-java": "^0.8.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0",
    "rollup": "^2.21.0",
    "swiftlint": "^1.0.1",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "peerDependencies": {
    "@capacitor/core": "^2.4.0"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "CapacitorCommunitySqlite.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "database",
    "sqlite"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/capacitor-community/sqlite"
  },
  "bugs": {
    "url": "https://github.com/capacitor-community/sqlite/issues"
  }
}
